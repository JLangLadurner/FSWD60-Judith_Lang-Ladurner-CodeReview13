{% extends 'base.html.twig' %}

{% block body %}
<a class="btn btn-md btn-success" href="/create">Add Event</a>
<h2 class="page-header text-center">Big Events Overview</h2>




<div class="row">
<div class="col-lg-11">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Capacity</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">address</th>
      <th scope="col">Website</th>
      <th scope="col">Type</th>
      
    </tr>
  </thead>
  <tbody>
  	{% for events in events %}
    <tr>
      <th scope="row">{{events.id}}</th>
      <td>{{events.eventName}}</td>
      <td>{{events.eventDate|date('d-m-Y')}}</td>
      <td>{{events.eventTime|date('H:i:s')}}</td>
      <td>{{events.description}}</td>
      <td><img src="{{events.img}}" alt="event img" width="50px" height="50px"></td>
      <td>{{events.capacity}}</td>
      <td>{{events.email}}</td>
      <td>{{events.phoneNr}}</td>
      <td>{{events.address}}</td>
      <td>{{events.url}}</td>
      <td>{{events.eventType}}</td>
      <td>
      
      	<a href="/edit/{{events.id}}" class="btn btn-sm btn-success"><i class="fas fa-pen-nib"></i></a>
      	<a href="/delete/{{events.id}}" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>

      </td>
    </tr>
    {% endfor %}
    
  </tbody>
</table>
	</div><!-- col end -->
</div> <!-- row end -->
{% endblock %}